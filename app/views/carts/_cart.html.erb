<h2>Your Cart</h2>
<table>
	<tr>
		<th>Product</th>
		<th>Quantity</th>
		<th>Price</th>
	</tr>
	<tr>
		<td>Title</td>
		<td>Quantity</td>
		<td>Price</td>
	</tr>
	<%= render(cart.line_items) %>
	<tr class="total_line">
		<td colspan="2">Total</td>
		<td class="total_cell"><%= number_to_currency(cart.total_price) %></td>
	</tr>
</table>

<%= button_to 'Empty Cart', cart, method: :delete, data: {confirm: 'Are you sure?'} %>