<!DOCTYPE html>
<html>
<head>
  <title>AgileStore</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="banner">
		<%= "Pragmatic Bookshelf" %>
	</div>

	<!-- div#columns -->
	<div id="columns">
		<div id="side">
			<ul>
				<li><a href="#">Home</a></li>
				<li><a href="#">Questions</a></li>
				<li><a href="#">News</a></li>
				<li><a href="#">Contact</a></li>
				<li style="color: whitesmoke;">Load Time: <%= time_tag(Time.now) %></li>
			</ul>
		</div>
		<div id="main"><%= yield %></div>
	</div>
	<!-- /div#columns -->
	
</body>
</html>
